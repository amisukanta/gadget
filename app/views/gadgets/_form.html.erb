<%= form_for(@gadget, :html => { :multipart => true }) do |f| %>



  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>
  <p>

    <%= f.label :price %>
    <%= f.text_field :price %>
  </p>
  
  <%= f.fields_for :gadget_attachments do |p| %>
  <p>
    <%= p.label :avatar %>
    <%= p.file_field :avatar, :multiple => true, name: "gadget_attachments[avatar][]" %>
  </p>
  <% end %>

    

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
